{
    "name": "wappsto-wapp",
    "version": "0.22.0",
    "license": "MIT",
    "author": "Seluxit A/S",
    "main": "dist/wappsto-wapp.cjs.production.min.js",
    "module": "dist/wappsto-wapp.esm.js",
    "typings": "dist/index.d.ts",
    "include": [
        "types/*"
    ],
    "files": [
        "dist/wappsto-wapp.esm.js",
        "dist/wappsto-wapp.cjs.production.min.js",
        "dist/wappsto-wapp.js",
        "dist/*.d.ts",
        "dist/**/*.d.ts"
    ],
    "keywords": [
        "wappsto",
        "wapp",
        "api",
        "iot",
        "seluxit"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Wappsto/javascript-wappsto-wapp"
    },
    "scripts": {
        "analyze": "size-limit --why",
        "prebuild": "node -p \"'export const VERSION = \\'' + require('./package.json').version + '\\';'\" > src/util/version.ts",
        "build": "dts build",
        "postbuild": "yarn browserify dist/wappsto-wapp.cjs.production.min.js --s Wappsto -o dist/wappsto-wapp.js",
        "lint": "dts lint src",
        "lint:fix": "yarn lint --fix",
        "prepare": "yarn build",
        "size": "size-limit",
        "start": "dts watch",
        "test": "dts test --coverage",
        "generate-types": "ts-interface-builder -v -g -c src/util/interfaces.ts; yarn lint:fix",
        "prepublish": "yarn build && yarn documentation",
        "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
        "documentation": "typedoc && yarn documentation:fix",
        "documentation:fix": "./fix_docs.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "dts lint --fix && dts test && dts build"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "peerDependencies": {},
    "engines": {
        "node": ">=16"
    },
    "size-limit": [
        {
            "path": "dist/wappsto-wapp.cjs.production.min.js",
            "limit": "60 KB"
        },
        {
            "path": "dist/wappsto-wapp.esm.js",
            "limit": "60 KB"
        },
        {
            "path": "dist/wappsto-wapp.js",
            "limit": "70 KB"
        }
    ],
    "dependencies": {
        "axios": "^0.27.2",
        "class-transformer": "^0.5.1",
        "isomorphic-ws": "^5.0.0",
        "lodash.isequal": "^4.5.0",
        "lodash.omit": "^4.5.0",
        "lodash.pick": "^4.4.0",
        "reflect-metadata": "^0.1.13",
        "ts-interface-checker": "^1.0.2",
        "tslib": "^2.6.1",
        "universal-websocket-client": "^1.0.2",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "@babel/core": "^7.22.10",
        "@babel/plugin-syntax-flow": "^7.22.5",
        "@babel/plugin-transform-react-jsx": "^7.22.5",
        "@size-limit/preset-small-lib": "^8.2.6",
        "@tsconfig/recommended": "^1.0.2",
        "@types/lodash.isequal": "^4.5.6",
        "@types/lodash.omit": "^4.5.7",
        "@types/lodash.pick": "^4.4.7",
        "@types/node": "^20.4.9",
        "@types/websocket": "^1.0.5",
        "@types/ws": "^8.5.5",
        "browserify": "^17.0.0",
        "dts-cli": "^2.0.3",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "jest-websocket-mock": "^2.4.1",
        "size-limit": "^8.2.6",
        "ts-interface-builder": "^0.3.3",
        "ts-jest": "^29.1.1",
        "typedoc": "^0.24.8",
        "typescript": "^5.1.6"
    }
}
