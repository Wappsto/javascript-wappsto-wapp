{
    "version": "0.7.2",
    "license": "MIT",
    "main": "src/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Wappsto/javascript-wappsto-wapp"
    },
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "tsc --build tsconfig.json",
        "pretest": "yarn lint:fix",
        "test": "jest --coverage --coveragePathIgnorePatterns index.ts",
        "lint": "eslint src test",
        "lint:fix": "yarn lint --fix",
        "prepare": "yarn build; npx browserify dist/wappsto-wapp.cjs.production.min.js --s Wappsto -o dist/wappsto-wapp.js",
        "doc": "yarn typedoc --tsconfig tsconfig.typedoc.json src/index.ts",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "generate-types": "ts-interface-builder -v -g -c src/util/interfaces.ts; yarn lint:fix",
        "postinstall": "husky install"
    },
    "peerDependencies": {},
    "husky": {
        "hooks": {
            "pre-commit": "yarn test && yarn build"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "wappsto-wapp",
    "author": "Andreas Bomholtz",
    "module": "dist/wappsto-wapp.esm.js",
    "size-limit": [
        {
            "path": "dist/wappsto-wapp.cjs.production.min.js",
            "limit": "60 KB"
        },
        {
            "path": "dist/wappsto-wapp.esm.js",
            "limit": "40 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.16.12",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/plugin-proposal-decorators": "^7.16.7",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@size-limit/preset-big-lib": "^7.0.5",
        "@types/jest": "^27.4.0",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "babel-jest": "^27.4.6",
        "browserify": "^17.0.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^26.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "jest-websocket-mock": "^2.2.1",
        "kind-of": "^6.0.3",
        "mock-socket": "^9.0.8",
        "nice-try": "^3.0.0",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.1",
        "size-limit": "^7.0.5",
        "ts-interface-builder": "^0.3.2",
        "typedoc": "^0.22.11",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@types/lodash": "^4.14.176",
        "@types/ws": "^8.2.0",
        "axios": "^0.24.0",
        "class-transformer": "^0.5.1",
        "isomorphic-ws": "^4.0.1",
        "lodash": "^4.17.21",
        "lodash-es": "^4.17.21",
        "reflect-metadata": "^0.1.13",
        "ts-interface-checker": "^1.0.2",
        "universal-websocket-client": "^1.0.2",
        "ws": "^7.5.5"
    }
}
