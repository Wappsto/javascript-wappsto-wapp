{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
      "module": "esnext",
      "experimentalDecorators": true,
      "moduleResolution": "node",
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "readme": "./README.md",
    "exclude": ["**/{types}/*.ts"],
    "out": "docs"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules/**"]
}
